<Operator>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        ScreenManager:
            id: _screen_manager
            Screen:
                name: 'Home'
                BoxLayout:
                    id: 'defaultLayout'
                    orientation: 'vertical'
                    spacing: 2
                    BoxLayout:
                        id: 'mapPanelLayout'
                        orientation: 'horizontal'
                        size_hint: 1, .8
                        Image:
                            source: 'data/images/maps/operator_background.png'
                            allow_stretch: True
                            keep_ratio: False
                    BoxLayout:
                        id: 'toolPanelLayout'
                        orientation: 'horizontal'
                        size_hint: 1, .1
                        Button:
                            background_normal: 'data/images/nav/camera.png'
                        Button:
                            background_normal: 'data/images/nav/map.png'
                            background_down: 'data/images/nav/map.png'
                            on_release: _screen_manager.current = 'Home'
                        Button:
                            background_normal: 'data/images/nav/menu.png'
                            background_down: 'data/images/nav/menu.png'
                            on_release: _screen_manager.current = 'Menu'
            Screen:
                name: 'Menu'
                BoxLayout:
                    id: 'defaultLayout'
                    orientation: 'vertical'
                    spacing: 2
                    BoxLayout:
                        id: 'menuPanelLayout'
                        orientation: 'horizontal'
                        size_hint: 1, .8
                        ScrollView:
                            do_scroll_x: False
                            BoxLayout:
                                id: 'settingsLayout'
                                orientation: 'vertical'
                                size_hint: 1, .99999
                                Button:
                                    background_normal: ''
                                    background_down: ''
                                Button:
                                    background_normal: 'data/images/settings/notes.png'
                                    background_down: 'data/images/settings/notes.png'
                                    on_release: _screen_manager.current = 'Notes'
                                Button:
                                    background_normal: 'data/images/settings/messages.png'
                                    background_down: 'data/images/settings/messages.png'
                                    on_release: _screen_manager.current = 'Messages'
                                Button:
                                    background_normal: 'data/images/settings/recorder.png'
                                    background_down: 'data/images/settings/recorder.png'
                                    on_release: _screen_manager.current = 'Recorder'
                                Button:
                                    background_normal: 'data/images/settings/soundboard.png'
                                    background_down: 'data/images/settings/soundboard.png'
                                    on_release: _screen_manager.current = 'Soundboard'
                                Button:
                                    background_normal: 'data/images/settings/checklist.png'
                                    background_down: 'data/images/settings/checklist.png'
                                    on_release: _screen_manager.current = 'Checklist'                       
                                Button:
                                    background_normal: 'data/images/settings/import_kml.png'
                                    background_down: 'data/images/settings/import_kml'
                                    on_release: _screen_manager.current = 'Import_KML'                                
                                Button:
                                    background_normal: 'data/images/settings/export_kml.png'
                                    background_down: 'data/images/settings/export_kml.png'
                                    on_release: _screen_manager.current = 'Export_KML'                                
                                Button:
                                    background_normal: 'data/images/settings/campaigns.png'
                                    background_down: 'data/images/settings/campaigns.png'
                                    on_release: _screen_manager.current = 'Campaigns'                                
                    BoxLayout:
                        id: 'toolPanelLayout'
                        orientation: 'horizontal'
                        size_hint: 1, .1
                        Button:
                            background_normal: 'data/images/nav/camera.png'
                            background_down: 'data/images/nav/camera.png' 
                        Button:
                            background_normal: 'data/images/nav/map.png'
                            background_down: 'data/images/nav/map.png'
                            on_release: _screen_manager.current = 'Home'
                        Button:
                            background_normal: 'data/images/nav/menu.png'
                            background_down: 'data/images/nav/menu.png'
                            on_release: _screen_manager.current = 'Menu'
            Screen:
                name: 'Notes'
                BoxLayout:
                    id: 'defaultLayout'
                    orientation: 'vertical'
                    spacing: 2
                    BoxLayout: 
                        id: 'notesPanelLayout'
                        orientation: 'horizontal'
                        size_hint: 1, .8
                        TextInput:
                            size_hint: 1, .85
                            multiline: True
                            background_color: [0,0,0,1]
                            foreground_color: [1,1,1,1]
                            focus: False
                            hint_text: 'Put your notes here'
                    BoxLayout:
                        id: 'toolPanelLayout'
                        orientation: 'horizontal'
                        size_hint: 1, .1
